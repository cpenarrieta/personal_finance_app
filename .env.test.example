# E2E Test Environment Variables
# Copy this file to .env.test and fill in your test values

# REQUIRED: Enable E2E test mode for auth bypass
E2E_TEST_MODE=true

# Database connection - Use a separate test database!
DATABASE_URL="postgresql://user:password@localhost:5432/finance_test"

# Better Auth configuration
BETTER_AUTH_SECRET="your-test-secret-key-min-32-chars"
BETTER_AUTH_URL="http://localhost:3000"

# Allowed emails for testing
ALLOWED_EMAILS="test@example.com"

# Plaid API (use sandbox environment)
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-sandbox-secret"
PLAID_ENV="sandbox"

# OpenAI (optional for categorization tests)
OPENAI_API_KEY="sk-..."

# OAuth Providers (optional - not used in E2E tests with bypass)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Playwright configuration (optional)
PLAYWRIGHT_BASE_URL="http://localhost:3000"
