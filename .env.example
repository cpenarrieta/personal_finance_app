# Database
DATABASE_URL=

# Better Auth Configuration
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=

# Allowed User(s) Email (REQUIRED - only this email can access the app)
ALLOWED_EMAILS=

# Google OAuth (Get credentials at: https://console.cloud.google.com/apis/credentials)
# 1. Create a new OAuth 2.0 Client ID
# 2. Add authorized redirect URI: http://localhost:3000/api/auth/callback/google
# 3. For production, also add: https://yourdomain.com/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (Get credentials at: https://github.com/settings/developers)
# 1. Create a new OAuth App
# 2. Set authorization callback URL: http://localhost:3000/api/auth/callback/github
# 3. For production, also add: https://yourdomain.com/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Plaid API (Financial Data)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=
PLAID_PRODUCTS=auth,transactions,investments
PLAID_COUNTRY_CODES=US,CA

# Plaid Webhook URL (Required for real-time transaction sync)
# Production: https://yourdomain.com/api/plaid/webhook
# Development: use ngrok URL (see docs/WEBHOOKS.md)
PLAID_WEBHOOK_URL=


# Plaid Webhook Verification (Optional - recommended for production)
# Leave empty for development/testing to skip verification
PLAID_WEBHOOK_VERIFICATION_KEY=""

# OpenAI API
OPENAI_API_KEY=

# Cloudinary (for secure file uploads - Get credentials at: https://cloudinary.com/)
# 1. Sign up for a free account at https://cloudinary.com/
# 2. Get your cloud name, API key, and API secret from the dashboard
# 3. API key is public (safe to expose), API secret is server-side only (never exposed to client)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_API_KEY=

# Sentry Error Monitoring (Optional - for production error tracking)
# Get your DSN from: https://sentry.io/settings/projects/
# Server-side DSN (keep private)
SENTRY_DSN=
# Client-side DSN (will be exposed to the browser)
NEXT_PUBLIC_SENTRY_DSN=
# Sentry organization and project (for source map uploads)
SENTRY_ORG=
SENTRY_PROJECT=
# Auth token for uploading source maps (get from: https://sentry.io/settings/account/api/auth-tokens/)
SENTRY_AUTH_TOKEN=

# for testing locally cron jobs (Vercel sets automatically in production)
CRON_SECRET=

# MCP API Key (for accessing the MCP server)
MCP_API_KEY=